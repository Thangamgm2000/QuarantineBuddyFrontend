<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Navigation">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This screen is just temporary navaigation window. Use this to open your other activities.
        This screen will be removed/replaced with a better ui during deployment"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openLeaderboard"
        android:text="Open leaderboard"
        android:layout_marginBottom="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor monitor"
        android:onClick="openSensorMonitor"/>
</LinearLayout>