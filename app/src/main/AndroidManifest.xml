<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leaderboardapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ChatbotActivity"></activity>
        <activity android:name=".profile" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TasksActivity" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".LauncherActivity" />

        <receiver
            android:name=".NotificationSender"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".NotificationReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".Notification_Activity" />
        <activity android:name=".UserProfile" />
        <activity android:name=".SensorMonitorActivity" />
        <activity android:name=".LeaderboardActivity" />
        <activity android:name=".Navigation" />
    </application>

</manifest>